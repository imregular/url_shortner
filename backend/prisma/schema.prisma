generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL_ACCELERATE")
  directUrl = env("DATABASE_URL")
}


model Url {
  id         String    @id @default(uuid())
  shortCode  String    @unique
  longUrl    String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?
  clickCount Int       @default(0)
  
  @@index([shortCode])
}